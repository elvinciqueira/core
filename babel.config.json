{
  "presets": [
    "@babel/preset-env",
    "@babel/preset-typescript",
    "@babel/preset-react",
    "@babel/preset-flow"
  ],
  "plugins": [
    [
      "styled-components",
      {
        "ssr": "true"
      }
    ],
    [
      "module-resolver",
      {
        "root": ["./src"],
        "extensions": [".ts", ".tsx"],
        "alias": {
          "@src": "./src"
        }
      }
    ],
    "@babel/proposal-class-properties",
    "@babel/proposal-object-rest-spread"
  ]
}
